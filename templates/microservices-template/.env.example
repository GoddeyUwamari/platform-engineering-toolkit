# ============================================================================
# CloudBill - Environment Variables Template
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to Git (contains secrets)
# ============================================================================

# Application
NODE_ENV=development
LOG_LEVEL=debug

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=localhost

# Auth Service
AUTH_SERVICE_PORT=8001
AUTH_SERVICE_HOST=localhost
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth2 (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8080/api/v1/auth/google/callback

# OAuth2 (GitHub)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:8080/api/v1/auth/github/callback

# Billing Service
BILLING_SERVICE_PORT=8002
BILLING_SERVICE_HOST=localhost

# Payment Service
PAYMENT_SERVICE_PORT=8003
PAYMENT_SERVICE_HOST=localhost
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Notification Service
NOTIFICATION_SERVICE_PORT=8004
NOTIFICATION_SERVICE_HOST=localhost
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudbill
DB_USER=cloudbill_user
DB_PASSWORD=change-this-secure-password

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000

# ============================================================================
# Redis (Cache & Session)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# Kafka (Event Streaming)
# ============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=cloudbill
KAFKA_GROUP_ID=cloudbill-group

# ============================================================================
# Security & CORS
# ============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# AWS (Production Only)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=cloudbill-invoices

# ============================================================================
# Monitoring & Observability
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=change-this-admin-password

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_WEBHOOKS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_AUDIT_LOGS=true