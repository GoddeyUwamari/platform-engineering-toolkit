# Payment Service Environment Variables

# Server Configuration
NODE_ENV=development
PAYMENT_SERVICE_PORT=3003
PORT=3003

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=cloudbill
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SCHEMA=public
DB_MAX_CONNECTIONS=20

